{
  "name": "infragenie",
  "displayName": "InfraGenie",
  "description": "take your service from plan to prd to one click deployment",
  "version": "0.0.1",
  "publisher": "infragenie",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "infra-genie.open",
        "title": "Open Infra Genie"
      }
    ],
    "configuration": {
      "title": "Infra Genie",
      "properties": {
        "infraGenie.apiEndpoint": {
          "type": "string",
          "default": "https://api.infragenie.com",
          "description": "Backend API endpoint URL for Infra Genie"
        },
        "infraGenie.apiTimeout": {
          "type": "number",
          "default": 30000,
          "description": "API request timeout in milliseconds"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "package": "webpack --mode production",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/dompurify": "^3.0.5",
    "@types/jsdom": "^27.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/vscode": "^1.103.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "css-loader": "^7.1.3",
    "eslint": "^9.39.2",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "webpack": "^5.105.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@types/marked": "^5.0.2",
    "dompurify": "^3.3.1",
    "jsdom": "^28.0.0",
    "marked": "^9.1.6",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  }
}
